options {
  STATIC = false;
}

PARSER_BEGIN(JDEECoParser)
package cz.cuni.mff.d3s.deeco.path.grammar;
import cz.cuni.mff.d3s.deeco.path.grammar.PNode;
import java.io.ByteArrayInputStream;

/** Simple brace matcher. */
public class JDEECoParser
{
  /** Main entry point. */
  public static PNode parse(String expression) throws ParseException
  {
    JDEECoParser parser = new JDEECoParser(new ByteArrayInputStream(expression.getBytes()));
    return parser.parseExpression();
  }
}

PARSER_END(JDEECoParser)

TOKEN [ IGNORE_CASE ] :
{
  < COORD : "coord" >
| < MEMBER : "member" >
}

TOKEN :
{
  < IDENTIFIER :
    (
      < LETTER >
    | < DIGIT >
    )+ >
| < #LETTER : [ "_", "-", "a"-"z", "A"-"Z" ] >
| < #DIGIT : [ "0"-"9" ] >
| < SEPARATOR : [ "." ] >
| < OPEN : [ "[" ] >
| < CLOSE : [ "]" ] >
}

PNode parseExpression() :
{
  Token t;
  PNode node = new PNode();
}
{
  (
    (t = < IDENTIFIER >
    {
      node.value = t.image;
    }
    )
  | (t = < COORD >
    {
      node.value = EEnsembleParty.COORDINATOR;
    }
    )
  | (t = < MEMBER >
    {
      node.value = EEnsembleParty.MEMBER;
    }
    )
  |
    (
      (
        < OPEN >
        {
          node.value = parseExpression();
        }
      )
      < CLOSE >
    )
  )
  (
    < SEPARATOR >
    {
      node.next = parseExpression();
    }
  )*
  {
    return node;
  }
}
